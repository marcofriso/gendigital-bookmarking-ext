{
  "name": "Bookmarking Side Panel",
  "description": "Save pages for later from a Chrome side panel.",
  "version": "0.1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "114",
  "action": {
    "default_title": "Bookmarking Side Panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "sidePanel", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
